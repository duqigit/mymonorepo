{
  "version": "independent",
  "npmClient": "pnpm",
  "useWorkspaces": true,
  "command": {
    "publish": {
      "message": "chore(release): publish %s",
      "registry": "https://registry.npmjs.org/",
      "ignoreChanges": ["*.md", "*.test.ts", "*.spec.ts"]
    },
    "version": {
      "allowBranch": ["main", "master", "develop", "release/*", "feature/*"],
      "conventionalCommits": true,
      "message": "chore(release): version %s",
      "createRelease": "github"
    }
  },
  "packages": [
    "packages/*"
  ]
}
