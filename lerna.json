{
  "version": "independent",
  "npmClient": "pnpm",
  "useWorkspaces": true,
  "command": {
    "publish": {
      "message": "chore(release): publish",
      "registry": "https://registry.npmjs.org/"
    },
    "version": {
      "allowBranch": ["main", "master", "develop"],
      "conventionalCommits": true,
      "message": "chore(release): version %s"
    }
  },
  "packages": [
    "packages/*"
  ]
}
