{
  "name": "my-mymonorepo-antd-ginza",
  "version": "0.0.1",
  "private": true,
  "description": "Ginza - A react component library based on antd 5.x",
  "scripts": {
    "start": "npm run dev",
    "dev": "dumi dev",
    "build:packages": "lerna run build",
    "docs:build": "dumi build",
    "docs:preview": "dumi preview",
    "prepare": "husky install && dumi setup",
    "lint": "npm run lint:es && npm run lint:css",
    "lint:css": "stylelint \"packages/*/src/**/*.{css,less}\"",
    "lint:es": "eslint \"packages/*/src/**/*.{js,jsx,ts,tsx}\"",
    "release:qa": "pnpm build:packages && lerna publish prerelease --dist-tag qa --preid qa --pre-dist-tag qa --yes",
    "release:ol": "pnpm build:packages && lerna publish patch --dist-tag latest --yes",
    "version:qa": "lerna version --conventional-commits --conventional-prerelease --preid qa",
    "version:ol": "lerna version --conventional-commits --conventional-graduate"
  },
  "authors": [
    "916475145@qq.com"
  ],
  "license": "MIT",
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{md,json}": [
      "prettier --write --no-error-on-unmatched-pattern"
    ],
    "*.{css,less}": [
      "stylelint --fix",
      "prettier --write"
    ],
    "*.{js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --parser=typescript --write"
    ]
  },
  "devDependencies": {
    "@coder-cloud/ginza-button": "workspace:*",
    "@coder-cloud/ginza-modal": "workspace:*",
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@umijs/lint": "^4.0.0",
    "dumi": "^2.4.13",
    "eslint": "^8.23.0",
    "husky": "^8.0.1",
    "lerna": "^7.4.2",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "prettier-plugin-organize-imports": "^3.0.0",
    "prettier-plugin-packagejson": "^2.2.18",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "stylelint": "^14.9.1"
  }
}
